# ===== Configuration Switches =====
# Toggle Langfuse observability on/off
ENABLE_LANGFUSE=false

# Database provider: "supabase" or "postgres"
DATABASE_PROVIDER=postgres

# ===== Langfuse Configuration (Optional) =====
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# ===== Supabase Configuration =====
SUPABASE_URL=
SUPABASE_SERVICE_KEY=
SUPABASE_ANON_KEY=

# ===== PostgreSQL Configuration (for DATABASE_PROVIDER=postgres) =====
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=source_code_analysis
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ===== RAG Pipeline Settings =====
ENVIRONMENT=production
PYTHONUNBUFFERED=1
RAG_PIPELINE_TYPE=local
RUN_MODE=continuous
RAG_POLL_INTERVAL=60
RAG_PIPELINE_ID=google-drive-sync-01
